                 {# {{ encore_entry_link_tags('app') }} #}
        {% endblock %}

        {% block javascripts %} 
                {# {{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <header style="margin-bottom: 10px;">
            
        
            <div class="ui pointing menu">
                <a class="item active " href="/" >
                    Home
                </a>
                <a class="item" href="/articles">
                    Articles
                </a>
                <a class="item" href="/categorie">
                    Categories
                </a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href={{path('articles_save')}} class="item"  >Ajouter un article</a>
                    <a href={{path('categorie_save')}} class="item"  >Ajouter une categorie</a>
                {% endif %}


                {% if app.user %} 
                    <a href={{path('app_logout')}} class="item"  >déconnexion</a>
                    
                    {% else %}
                        <a href={{path('app_register')}} class="item"  >inscription</a>
                        <a href={{path('app_login')}} class="item"  >connexion</a>
                {% endif %}
                
                
                <div class="right menu">
                    <div class="item">
                    <div class="ui transparent icon input">
                        <input type="text" placeholder="Search...">
                        <i class="search link icon"></i>
                    </div>
                    </div>
                </div>

        </header>

        {% for type, messages in app.flashes %}
            {% for item in messages %}
                <div class="ui {{type}} message"><i class="close icon"></i><div class="header">{{type}} </div>
                <p>{{item}} </p>
                </div>
            {% endfor %}  
        {% endfor %}


        <main>
            <div class="ui container">
                {% block body %}{% endblock %}  
            </div>            
        </main>

        <footer>
            {% block footer %}{% endblock %} 
        </footer>

        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
