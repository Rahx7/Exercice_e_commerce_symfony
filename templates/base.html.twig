        {% block stylesheets %} 
                 {# {{ encore_entry_link_tags('app') }} #}
        {% endblock %}

        {% block javascripts %} 
                {# {{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>

    <body>
        <header style="margin-bottom: 10px;">
            
        
            <div class="ui inverted menu">
                
                {# {% if is_granted('ROLE_ADMIN') %}
                    <a href={{path('paniers')}} class="item"  >paniers</a>
                {% endif %} #}

                {% if app.user %} 
                        <a href={{path('paniers')}} class="item"  >paniers</a>
                        <a class="item" href={{path('app_logout')}} >déconnexion</a>                  
                {% else %}
                    <a href={{path('app_register')}} class="item"  >inscription</a>
                    <a href={{path('app_login')}} class="item"  >connexion</a>
              
                {% endif %}

            </div>    

        </header>

        {% for type, messages in app.flashes %}
            {% for item in messages %}
                <div class="ui {{type}} message"><i class="close icon"></i><div class="header">{{type}} </div>
                <p>{{item}} </p>
                </div>
            {% endfor %}  
        {% endfor %}


        <main>
            <div class="ui container">
                {% block body %}{% endblock %}  
                   {{ dump(app.user) }}
            </div>            
        </main>

        <footer>
            {% block footer %}{% endblock %} 
        </footer>

        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
